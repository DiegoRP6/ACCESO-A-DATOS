@model MVC2024.Models.VehiculoModelo

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>VehiculoModelo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Matricula" class="control-label"></label>
                <input asp-for="Matricula" class="form-control" />
                <span asp-validation-for="Matricula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SerieID" class="control-label"></label>
                <select asp-for="SerieID" class ="form-control" asp-items="ViewBag.SerieID"></select>
            </div>
            //insertar muchos extras con select multiple
            <div class="form-group">
				<label asp-for="ExtrasSeleccionados" class="control-label"></label>
                <select multiple asp-for="ExtrasSeleccionados" class="form-control" asp-items="ViewBag.VehiculoExtra"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
